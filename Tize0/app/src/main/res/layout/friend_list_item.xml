<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEvent">

    <TextView
        android:id="@+id/usernameListItem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:text="Item name"
        android:textColor="@color/tizeDarkGray"
        android:textSize="@dimen/friendsListTextSize"
        android:clickable="true"
        android:onClick="onUserInviteListener"/>

    <View
        android:id="@+id/item_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lvDividerHeight"
        android:background="@color/tizeLightGray"
        android:layout_alignBottom="@+id/usernameListItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>